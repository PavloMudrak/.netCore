@if (Model.Products.Count != 0)
{
    <h1>Products in this categorie</h1>
    <p>
        @Html.ActionLink("Create", "Create", "Product", new { controllerForRedirect = "Category", categoryId = Model.Id })
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Product", new { id=item.Id , controllerForRedirect = "Category"}) |
                        @Html.ActionLink("Delete", "Delete", "Product", new {id=item.Id, controllerForRedirect = "Category" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>There are no products in this categorie</h1>
    <p>
        @Html.ActionLink("Create first one", "Create", "Product", new {controllerForRedirect = "Category", categoryId = Model.Id  })
    </p>
}

